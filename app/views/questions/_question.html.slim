- if question.user
  div id="question-#{question.id}" class="question"
    .question-inner
      .question-top-bar
        ul
          li.avatar
            = image_tag question.user.avatar.url
          li.user-name
            = question.user.name
          li.created-at
            = "#{time_ago_in_words(question.created_at)} atr√°s"
          li
            = link_to question.get_downvotes.size.to_s.rjust(3, '0'), downvote_question_path(question), method: :put, class: "question-downvote #{(current_user.voted_down_on? question) ? 'downvoted' : ''}", remote: true, data: { type: :json }
          li
            = link_to question.get_upvotes.size.to_s.rjust(3, '0'), upvote_question_path(question), method: :put, class: "question-upvote #{(current_user.voted_up_on? question) ? 'upvoted' : ''}", remote: true, data: { type: :json }
          - if question.parent_id.blank?
            li.answers-to-this
              = link_to image_tag('comments1.png'), "#"
      .question-content
        p
          = question.description
    .question-answers
      - question.answers.each do |a|
        = render partial: 'questions/question', locals: { question: a }
